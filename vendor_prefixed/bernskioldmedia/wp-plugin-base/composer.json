{
    "name": "bernskioldmedia\/wp-plugin-base",
    "description": "A WordPress plugin base that contains helpful base classes and functions that we can extend upon when developing WordPress plugins.",
    "type": "library",
    "require": {
        "monolog\/monolog": "~1.25",
        "php": "^7.4|^8.0",
        "symfony\/console": "^4.0|^5.0",
        "symfony\/process": "^4.0|^5.0"
    },
    "require-dev": {},
    "license": "MIT",
    "authors": [
        {
            "name": "Bernskiold Media",
            "email": "hello@bernskioldmedia.com",
            "role": "agency",
            "homepage": "https:\/\/bernskioldmedia.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "WPPS_Vendor\\WPPS_Vendor\\BernskioldMedia\\WP\\PluginBase\\": "src\/"
        }
    },
    "bin": [
        "bin\/forge"
    ],
    "scripts": {
        "lint": "phpcs .",
        "lint-fix": "phpcbf ."
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}